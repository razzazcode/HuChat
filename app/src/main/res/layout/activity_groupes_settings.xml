<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/radial_gradient_bkg"


    tools:context=".GroupesSettingsActivity">


    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/Groupessettings_toolbar"
        >
    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Groupesset_profile_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile_image"

        android:background="@drawable/radial_gradient_bkg"


        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <EditText
        android:id="@+id/Groupesset_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Groupesset_profile_image"
        android:inputType="textMultiLine"
        android:hint="Groupe Name"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit_profile"
        android:textStyle="bold"
        android:background="@drawable/radial_gradient_bkg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="20dp"

        android:textColor="@color/colormAINtEXT"
        android:textColorHint="@color/colormAINtEXT"



        />

    <EditText
        android:id="@+id/Groupesset_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Groupesset_user_name"
        android:inputType="textMultiLine"
        android:hint=" Groupe Status "
        android:textAlignment="center"
        android:drawableStart="@drawable/edit_status"
        android:textColor="@color/colormAINtEXT"
        android:textStyle="bold"
        android:background="@drawable/radial_gradient_bkg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="20dp"

        android:textColorHint="@color/colormAINtEXT"


        />


    <Button
        android:id="@+id/Groupesupdate_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Groupesset_profile_status"
        android:inputType="textMultiLine"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="195dp"
        android:layout_height="173dp"
        android:layout_below="@+id/Groupesupdate_settings_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"


        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="108dp"
        app:srcCompat="@drawable/logoofapp" />




</RelativeLayout>